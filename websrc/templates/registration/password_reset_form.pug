| {% extends 'layout.html' %}
| {% load i18n %}
| {% block page_title %}Reset Your Password -- Blender ID{% endblock %}
| {% block body %}
.bid.box
	.row
		.col-md-8.col-md-offset-2
			.bid-header
				ul.bid-icons
					li
						i.fa.fa-shield
				h1 Password Reset

			form(action='', method='POST')
				| {% csrf_token %}
				p {% trans "Forgotten your password? Enter your email address below, and we'll email instructions for setting a new one." %}
				fieldset
					.row
						.col-md-12
							// Email
							.input-group
								span.input-group-addon
									i.fa.fa-unlock-alt
								| {{ form.email }}
							| {{ form.email.errors }}

							.bid-cta
								button.btn.btn-success(type='submit')
									i.fa.fa-check
									| {% trans "Reset My Password" %}
								a.btn(href="{% url 'bid_main:index' %}")
									i.fa.fa-times
									| Cancel
| {% endblock %}
